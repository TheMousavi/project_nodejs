<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">دوره ها</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>نام دوره</th>
                                <th>نوع دوره</th>
                                <th>قیمت</th>
                                <th>نمایش</th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <% courses.docs.forEach(course => { %>
                        <tr>
                            <td><%- course.title %></td>
                            <td>
                                 <% if(course.type === 'vip') { %>
                                    اعضای ویژه
                                 <% }else if(course.type === 'cash') { %>
                                     نقدی
                                 <% } else { %>
                                     رایگان
                                 <% }%>
                            </td>
                            <td><%- course.price %></td>
                            <td><%- course.viewCount %></td>
                            <td>
                                <div>
                                    <form action="/admin/course/<%- course._id %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="delete">
                                        <a href="/admin/course/<%= course._id %>/edit" class="btn btn-sm btn-primary">ویرایش</a>
                                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>نام دوره</th>
                                <th>نوع دوره</th>
                                <th>قیمت</th>
                                <th>نمایش</th>
                                <th>تنظیمات</th>
                            </tr>
                        </tfoot>
                    </table>


                </div>
            </div>

   <%- include(viewPath('layouts/paginate'), { pagination : courses }) %>

        </div>
    </div>
</div>

