<div class="container">
    <div class="row pt-5 justify-content-center">
        <div class="col-8">
            <div class="card card-default">
                <div class="card-header">
                    <h5>فراموشی رمز عبور</h5>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" method="POST" action="/auth/password/email" novalidate>

           <%- include(viewPath('layouts/error-messages') , { errors }) %>


                        <% if(success.length > 0) { %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span>×</span>
                            </button>
                            <% success.forEach(succ =>{ %>
                            <%- succ %> <br>
                            <% }) %>

                        </div>
                        <% } %>

                        <div class="form-group">
                            <label for="email" class="control-label">آدرس ایمیل</label>
                            <input id="email" type="email" class="form-control" name="email" required>
                        </div>


                        <div class="form-group">
                            <%- recaptcha -%>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">تغییر رمز عبور</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
<% let sweetalert = req.flash('sweetalert') %>
<% if(sweetalert.length) { %>
    <% let data = sweetalert[0]; %>
    <script>
        Swal.fire({
            title : '<%= data.title %>',
            text : '<%= data.text %>',
            type : '<%= data.type %>'
        })
    </script>
<% } %>